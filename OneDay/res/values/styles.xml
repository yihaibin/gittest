<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- title bar party-->
    <style name="title_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_tb</item>
    </style>
    <style name="tb_btn">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>        
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/selector_trans_blue0030</item>
    </style>
    <style name="tb_ibtn">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>       
        <item name="android:gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/selector_trans_blue0030</item>
    </style>        
    
	<style name="arrow">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>	 
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/ic_arrow</item>   
	</style>        
	
	<style name="lv_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fadingEdge">none</item>	    
        <item name="android:scrollingCache">false</item>
        <item name="android:divider">@color/graycc</item>	    
        <item name="android:dividerHeight">1px</item>
        <item name="android:listSelector">@drawable/selector_list_trans_blue</item>	    
	</style>
    
	<!-- setting party -->
	<style name="setting_btn_act_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/selector_grayf0_grayc0</item>
	</style>
	<style name="setting_btn_act_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>	    
	</style>
	
	<style name="setting_btn_split">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">1px</item>
	    <item name="android:background">@color/graycc</item>
	</style>
	
	<style name="setting_btn_qyer_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>	
        <item name="android:orientation">horizontal</item>  
		<item name="android:gravity">center</item> 
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginRight">5dp</item>
		<item name="android:clickable">true</item>
		<item name="android:background">@drawable/selector_white_graycc</item>
	</style>    
	<style name="setting_btn_qyer_iv">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>	 
        <item name="android:scaleType">fitCenter</item>   
	</style>	    
	<style name="setting_btn_qyer_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>	    
	</style>	
	
	<style name="setting_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>	
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">10dp</item>  
        <item name="android:background">@drawable/selector_grayf0_grayc0</item>
        <item name="android:textColor">@color/black</item>  
        <item name="android:textSize">18sp</item>
	</style>
	
	<style name="setting_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>	
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">10dp</item>  
        <item name="android:background">@color/grayf0</item>
        <item name="android:textColor">@color/black</item>  
        <item name="android:textSize">18sp</item>
	</style>	
	    
	<style name="no_bg_dialog" parent="android:style/Theme.Dialog">
		<item name="android:windowBackground">@android:color/transparent</item>
	</style>

	<style name="base_dialog" parent="no_bg_dialog">
		<item name="android:windowFrame">@android:color/transparent</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:backgroundDimEnabled">false</item>
		<item name="android:windowIsTranslucent">true</item>
	</style>
		    		    
</resources>
